@{
    Layout = "_LoginLayout";
    var errorMsg = ViewData["error_poruka"];
}
@model RegisterVM

<div class="container login-container">
    <div class="row">
        <div class="col-md-6 col-centered login-form-2">
            <h3>Registracija</h3>
            <form asp-action="Register" asp-controller="Auth" asp-area="Admin">
                <div class="form-group">
                    <input asp-for="Username" type="text" class="form-control" />
                    <span asp-validation-for="Username" class="text-light"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Email" type="text" class="form-control" />
                    <span asp-validation-for="Email" class="text-light"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">@errorMsg</span>
                </div>
                <hr />
                <div class="form-group">
                    <input asp-for="Firstname" type="text" class="form-control" />
                    <span asp-validation-for="Firstname" class="text-light"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Lastname" type="text" class="form-control" />
                    <span asp-validation-for="Lastname" class="text-light"></span>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Telefon" value="" disabled />
                </div>
                <hr />
                <div class="form-group">
                    <input asp-for="Password" type="text" class="form-control" />
                    <span asp-validation-for="Password" class="text-light"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Potvrdi password *" value="" disabled />
                </div>
                <div class="form-group">
                    <input type="submit" class="btnSubmit" value="Register" />
                </div>
                <div class="form-group">
                    <span>Već imate korisnički nalog?</span>
                    <a asp-action="Index" asp-controller="Auth" class="ForgetPwd">Nazad na login</a>
                </div>
            </form>
        </div>
    </div>
</div>