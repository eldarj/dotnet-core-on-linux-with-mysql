@model DashboardVM
<div class="row">
    <div class="col-xl-6 col-sm-6 mb-3">
        <div class="card text-white bg-primary o-hidden h-100">
            <div class="card-body big-icon">
                <div class="card-body-icon">
                    <i class="fas fa-utensils"></i>
                </div>
                <h2 class="text-white text-center">
                    @Model.TotalPosts
                </h2>
                <div class="text-center">ukupno članaka!</div>
            </div>
            <a class="card-footer text-white clearfix small z-1"
               asp-controller="Posts" asp-area="Admin">
                <span class="float-left">Pregledaj članke</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-6 col-sm-6 mb-3">
        <div class="card text-white bg-warning o-hidden h-100">
            <div class="card-body big-icon">
                <div class="card-body-icon">
                    <i class="fas fa-fw fa-list"></i>
                </div>
                <h2 class="text-white text-center">
                    @Model.TotalCategories
                </h2>
                <div class="text-center">ukupno kategorija!</div>
            </div>
            <a class="card-footer text-white clearfix small z-1"
               asp-controller="Posts" asp-area="Admin">
                <span class="float-left">Pregledaj kategorije</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-6 col-sm-6 mb-3">
        <div class="card text-white bg-success o-hidden h-100">
            <div class="card-body big-icon">
                <div class="card-body-icon">
                    <i class="fas fa-fw fa-shopping-cart"></i>
                </div>
                <h2 class="text-white text-center">
                    @Model.TotalPosts
                </h2>
                <div class="text-center">ukupno lajkova!</div>
            </div>
            <a class="card-footer text-white clearfix small z-1"
               asp-controller="Categories" asp-area="Admin">
                <span class="float-left">Pregledaj lajkove</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-6 col-sm-6 mb-3">
        <div class="card text-white bg-danger o-hidden h-100">
            <div class="card-body big-icon">
                <div class="card-body-icon">
                    <i class="fas fa-fw fa-life-ring"></i>
                </div>
                <h2 class="text-white text-center">
                    @Model.TotalPosts
                </h2>
                <div class="text-center">ukupno članaka!</div>
            </div>
            <a class="card-footer text-white clearfix small z-1"
               asp-controller="Posts" asp-area="Admin">
                <span class="float-left">Pregledaj članke</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
</div>
<hr />
